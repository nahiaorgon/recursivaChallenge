@page "/estadisticas"

@using Horoscopo.Core.Entities
@inject HttpClient _http
@inject NavigationManager _navigationManager

<div class="pantalla-contenedor">
    <div class="header-azul">
        <button class="btn-volver-circular" @onclick='() => _navigationManager.NavigateTo("/resultado")'>
            <span>←</span>
        </button>
        <span class="header-titulo">Estadísticas de Astros</span>
    </div>

    <div class="contenido-scroll">
        @if (_estadistica == null)
        { 
            <div class="contenedor-prediccion">
                <p class="texto-prediccion mt-3">
                    Analizando constelaciones...
                </p>
            </div>
        }
        else
        { 

            <div class="card-stats mb-4">
                <div class="stat-item">
                    <span class="stat-label">TOTAL</span>
                    <span class="stat-value">@_estadistica.TotalConsultas</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <span class="stat-label">GÉNERO TOP</span>
                    <span class="stat-value text-uppercase">@_generoDominante</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <span class="stat-label">SIGNO REY</span>
                    <span class="stat-value text-uppercase">@_estadistica.SignoFavorito</span>
                </div>
            </div>

            <h5 class="titulo-seccion mb-3">Distribución por Género</h5>
            <div class="ranking-contenedor mb-4">
                @foreach (var genero in _estadisticaGenero)
                {
                    <div class="fila-ranking">
                        <div class="info-izq">
                            <i class="bi @(genero.Key == "Masculino" ? "bi-gender-male" : "bi-gender-female") mr-2"></i>
                            <span class="nombre-signo">@genero.Key - <span class="votos-resaltados">@genero.Value</span></span>
                        </div>
                        <div class="barra-progreso-contenedor">
                            <div class="barra-llenado genero-bar" style="width: @(CalcularPorcentaje(genero.Value))%;"></div>
                        </div>
                    </div>
                }
            </div>

            <h5 class="titulo-seccion mb-3">Ranking de Popularidad</h5>
            <div class="ranking-contenedor">
                @foreach (var ranking in _rankingSignos)
                {
                    <div class="fila-ranking">
                        <div class="info-izq">
                            <img src="images/boton_@(ranking.Key.ToLower()).png" class="mini-signo" alt="@ranking.Key" />
                            <span class="nombre-signo">@ranking.Key - <span class="votos-resaltados">@ranking.Value</span></span>
                        </div>
                        <div class="barra-progreso-contenedor">
                            <div class="barra-llenado" style="width: @(CalcularPorcentaje(ranking.Value))%;"></div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private Estadistica? _estadistica;
    private Dictionary<string, int> _rankingSignos = new();
    private Dictionary<string, int> _estadisticaGenero = new();
    private string _generoDominante = "N/A";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _estadistica = await _http.GetFromJsonAsync<Estadistica>("api/horoscopo/estadisticas");
    
            if (_estadistica?.Historial != null)
            {
                _rankingSignos = _estadistica.Historial
                    .GroupBy(h => h.Signo)
                    .OrderByDescending(g => g.Count())
                    .ToDictionary(g => g.Key, g => g.Count()); 

                _estadisticaGenero = _estadistica.Historial
                .Where(h => !string.IsNullOrEmpty(h.Genero))
                .GroupBy(h => h.Genero)
                .OrderByDescending(g => g.Count())
                .ToDictionary(g => g.Key!, g => g.Count());

                _generoDominante = _estadisticaGenero.FirstOrDefault().Key ?? "N/A";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private double CalcularPorcentaje(int cantidad)
    {
        if (_estadistica == null || _estadistica.TotalConsultas == 0) return 0;
        return (double)cantidad / _estadistica.TotalConsultas * 100;
    }
}