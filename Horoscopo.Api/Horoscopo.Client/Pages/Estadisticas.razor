@page "/estadisticas"
@using Horoscopo.Core.Entities
@inject HttpClient _http
@inject NavigationManager _navigationManager

<div class="pantalla-contenedor">
    <div class="header-azul">
        <button class="btn-volver-circular" @onclick='() => _navigationManager.NavigateTo("/")'>
            <span>←</span>
        </button>
        <span class="header-titulo">Estadísticas de Astros</span>
    </div>

    <div class="contenido-scroll">
        @if (_stats == null)
        {
            <div class="text-center mt-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p>Analizando constelaciones...</p>
            </div>
        }
        else
        { 

            <div class="card-stats mb-4">
                <div class="stat-item">
                    <span class="stat-label">TOTAL</span>
                    <span class="stat-value">@_stats.TotalConsultas</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <span class="stat-label">SIGNO REY</span>
                    <span class="stat-value text-uppercase">@_stats.SignoFavorito</span>
                </div>
            </div>

            <h5 class="titulo-seccion mb-3">Ranking de Popularidad</h5>

            <div class="ranking-contenedor">
                @foreach (var ranking in _rankingSignos)
                {
                    <div class="fila-ranking">
                        <div class="info-ranking">
                            <img src="images/boton_@(ranking.Key.ToLower()).png" class="mini-signo" alt="@ranking.Key" />
                            <span class="nombre-signo">@ranking.Key</span>
                        </div>
                        <div class="barra-progreso-contenedor">
                            <div class="barra-llenado" style="width: @(CalcularPorcentaje(ranking.Value))%;"></div>
                        </div>
                        <span class="cantidad-votos">@ranking.Value</span>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private Estadistica? _stats;
    private Dictionary<string, int> _rankingSignos = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _stats = await _http.GetFromJsonAsync<Estadistica>("api/horoscopo/estadisticas");
    
            if (_stats?.Historial != null)
            {
                // Agrupamos para el ranking
                _rankingSignos = _stats.Historial
                    .GroupBy(h => h.Signo)
                    .OrderByDescending(g => g.Count())
                    .ToDictionary(g => g.Key, g => g.Count()); 
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private double CalcularPorcentaje(int cantidad)
    {
        if (_stats == null || _stats.TotalConsultas == 0) return 0;
        return (double)cantidad / _stats.TotalConsultas * 100;
    }
}