@page "/"
@inject NavigationManager _navigationManager

<div class="pantalla-celular">
    <div class="contenido-centrado text-center">
        <img src="images/dama.png" class="logo-principal mb-4" alt="Horóscopo Logo" />

        <button class="btn-naranja-redondeado" @onclick='() => _navigationManager.NavigateTo("/seleccion-genero")'>
            INGRESAR
        </button>

        <div class="separador-botones d-flex flex-row gap-3 justify-content-center">
            <button class="btn-naranja-suave" @onclick='() => _navigationManager.NavigateTo("/historial")'>
                VER HISTORIAL
            </button>
            <button class="btn-naranja-suave" @onclick='() => _navigationManager.NavigateTo("/estadisticas")'>
                VER ESTADÍSTICAS
            </button>
        </div>
    </div>
</div>